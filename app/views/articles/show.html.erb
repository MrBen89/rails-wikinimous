
<h2><%= @article.title %></h2>
<p> <%= @article.content %></p>
<button class="btn btn-outline-success"><%= link_to "Back", articles_path %></button>
<button class="btn btn-outline-success"><%= link_to "Edit", edit_article_path(@article) %></button>

<button class="btn btn-outline-success"><%= link_to "Delete Article",
  article_path(@article),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></button>
